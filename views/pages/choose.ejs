<% include ../partials/head %>
  <script type="text/javascript" src="../../scripts/choose.js"></script>

  <main class="sfdx-slim slds-card">

    <h2 class="slds-text-heading_medium slds-p-top_medium slds-p-bottom_medium">Confirm Deployment Details</h2>

    <p class="slds-p-bottom_medium">
      <strong>Deploying To</strong><br />
      <%= user_name %>
    </p>
    <p>
      <strong>Choose a Repo</strong><br />

      <fieldset class="slds-form-element">
        <div class="slds-form-element__control">
          <span class="slds-radio">
            <input type="radio" id="radio-1" name="options" checked="checked" value="https://github.com/wadewegner/sfdx-dreamhouse">
            <label class="slds-radio__label" for="radio-1">
              <span class="slds-radio_faux"></span>
          <span class="slds-form-element__label"><a href="https://github.com/wadewegner/sfdx-dreamhouse" target="_blank">https://github.com/wadewegner/sfdx-dreamhouse</a></span>
          </label>
          </span>
          <span class="slds-radio">
            <input type="radio" id="radio-2" name="options" value="https://github.com/wadewegner/sfdx-simple">
            <label class="slds-radio__label" for="radio-2">
              <span class="slds-radio_faux"></span>
          <span class="slds-form-element__label"><a href="https://github.com/wadewegner/sfdx-simple" target="_blank">https://github.com/wadewegner/sfdx-simple</a></span>
          </label>
          </span>

          <span class="slds-radio">
              <input type="radio" id="radio-3" name="options" value="https://github.com/wadewegner/northern-trail">
              <label class="slds-radio__label" for="radio-3">
                <span class="slds-radio_faux"></span>
          <span class="slds-form-element__label"><a href="https://github.com/wadewegner/northern-trail" target="_blank">https://github.com/wadewegner/northern-trail</a></span>
          </label>
          </span>
        </div>
      </fieldset>

    </p>

    <div class="slds-align_absolute-center slds-p-top_medium slds-p-bottom_small sfdx-button-bar">
      <button type="button" class="slds-button slds-button_neutral sfdx-button_large" id="no">Cancel</button>
      <button type="button" class="slds-button slds-button_brand sfdx-button_large" id="yes">Deploy</button>
    </div>

  </main>

  <main class="sfdx-slim slds-card">

    <h2 class="slds-text-heading_medium slds-p-top_small slds-p-bottom_medium">Want to try your own repo?</h2>
    <p class="slds-p-bottom_small">Just add the <img src="/dist/assets/images/DeployToSFDX.svg" /> button. <a href="/repo">Learn more</a>.</p>

  </main>

  <% include ../partials/footer %>